<a class="[ skip-link ] [ button ]" href="#main-content">Skip to content</a>
<header role="banner" class="[ site-head ] [ text-300 {% if siteHeadColor %}bg-{{ siteHeadColor}}{% endif %} ]">
  <div class="[ site-head__inner ] [ splitter ] [ wrapper ]">
    <div class="line-highlight">
      <a href="/" class="brand">
        <span class="dot" role="presentation"></span>
        <span>{{ site.name }}</span>
      </a>
    </div>
    <div class="splitter__group">
      <div class="line-highlight">2021</div>
      <div class="[ line-highlight ] [ audio ]">
        <button class="[ audio-toggle ] [ link-button ] [ color-dark ]">
          <span>Audio on</span>
          <svg class="{% if audioColor %}color-{{ audioColor }}{% else %}color-primary{% endif %}" width="18" height="11" viewBox="0 0 18 11" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill="currentColor" d="M0 3h2v8H0zM4 0h2v11H4zM8 4h2v7H8zM12 6h2v5h-2zM16 0h2v11h-2z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  {% include "partials/burger-menu.njk" %}
</header>
